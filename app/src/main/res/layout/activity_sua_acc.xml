<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SuaAccActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_acc"
        app:title="Thông tin tài khoản"
        android:background="#65C7F3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_margin="5dp"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_acc"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Nhập thông tin thay đổi tài khoản"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Họ tên:" />

        <EditText
            android:id="@+id/edtFullnameAcc"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tên đăng nhập:" />

        <EditText
            android:id="@+id/edtUserAcc"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mật khẩu:" />

        <EditText
            android:id="@+id/edtPassAcc"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Name" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xác nhận mật khẩu:" />

        <EditText
            android:id="@+id/edtPassXacNhan_Acc"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            android:text="" />
        <Button
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:id="@+id/btnSuaAcc"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Lưu" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>